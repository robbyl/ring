<div class="popup-wrapper">
  <div class="popup">
    <div class="popup-header">Login</div>
    <div class="close"></div>
    <div class="popup-content">
      <p>Login</p>
      <%= form_for @user, url: {controller: 'users', action: 'authenticate'}, remote: true do |f| %>
          <% if @user.errors.any? %>
              <div id="error_explanation">
                <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

                <ul>
                  <% @user.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
          <% end %>

          <p id="notice"><%= notice %></p>

          <div class="label-field-pair">
            <label for="vendor">username:</label><br/>

            <div class="text-input-bg"><%= f.text_field :username %></div>
          </div>
          <div class="label-field-pair">
            <label for="vendor">password:</label><br/>

            <div class="text-input-bg"><%= f.password_field :password %></div>
          </div>

          <div class="actions">
            <%= f.submit "#{t('login')}" %>
          </div>
      <% end %>
    </div>
  </div>
</div>

<script type="text/javascript">
    $('.close').click(function () {
        jQuery('#popup-container').children().remove();
    });
</script>
